@model RazorCrud.Pages.ClimbingCompetitions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClimbingCompetition[0].CompetitionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClimbingCompetition[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClimbingCompetition[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClimbingCompetition[0].CurrentChampionMen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClimbingCompetition[0].CurrentChampionWomen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ClimbingCompetition) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentChampionMen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentChampionWomen)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
