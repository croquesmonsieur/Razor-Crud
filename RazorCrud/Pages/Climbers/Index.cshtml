@page
@model RazorCrud.Pages.Climbers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Climber[0].ClimberName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Climber[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Climber[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Climber[0].Style)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Climber[0].FavoritePlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Climber[0].Achievement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Climber) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClimberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Style)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavoritePlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Achievement)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
